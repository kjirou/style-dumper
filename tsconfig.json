{
  "compilerOptions": {
    /* Basic Options */
    "declaration": true,
    "lib": [
      "es2018"
    ],
    "module": "commonjs",
    "newLine": "lf",
    "outDir": "../dist",
    "target": "es5",

    /* Strict Type-Checking Options */
    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true
  },
  "include": [
    "../src"
  ]
}
